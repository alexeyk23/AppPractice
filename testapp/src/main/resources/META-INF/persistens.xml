<persistence
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="PTTest" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<properties>		
			<property name="hibernate.dialect" value="com.relex.practice.util.LinterDialect" />			
			<property name="hibernate.connection.driver_class" value="com.relx.jdbc.LinterDriver" />
			<property name="hibernate.connection.url"
				value="jdbc:linter:linapid:localhost:1070:local" />
			<property name="hibernate.connection.username" value="SYSTEM" />
			<property name="hibernate.connection.password" value="MANAGER" />			
		</properties>
	</persistence-unit>
</persistence>